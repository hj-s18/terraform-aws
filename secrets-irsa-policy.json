{
    "Version": "2012-10-17",                                                      # 정책 언어의 버전
    "Statement": [                                                                # 권한 설정
        {
            "Effect": "Allow",                                                    # 허용(Allow) 또는 거부(Deny)
            "Action": "secretsmanager:GetSecretValue",                            # 허용/거부할 작업
            "Resource": "arn:aws:secretsmanager:<리전>:<계정ID>:secret:rds!*"     # 적용될 AWS 리소스
        }
    ]
}
